<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.lab4.controller.TrucksController">
    <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0">
        <StackPane>
            <Label alignment="CENTER" text="Грузовые автомобили">
                <font>
                    <Font size="16.0"/>
                </font>
            </Label>
        </StackPane>
        <TableView fx:id="table" prefHeight="350.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="serialNumberCol" prefWidth="75.0" text="Серийный номер"/>
                <TableColumn fx:id="brandCol" prefWidth="75.0" text="Модель"/>
                <TableColumn fx:id="yearCol" prefWidth="75.0" text="Год"/>
                <TableColumn fx:id="powerCol" prefWidth="75.0" text="Мощность"/>
                <TableColumn fx:id="axisCountCol" prefWidth="75.0" text="Число осей"/>
                <TableColumn fx:id="maxCargoWeightCol" prefWidth="75.0" text="Макс.груз"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
</AnchorPane>
